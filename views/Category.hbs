                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                <h1 class="h3 mb-0 text-gray-800">Category</h1>
                    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
                        For more information about DataTables.</a>.</p>
                        <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                             <div class="col-sm-12 text-right">
                            <button type="button" class="btn btn-primary" onclick="GotoAddCate()">
                                Add Category
                            </button>
                        </div>
                        </div>
                        <div class="card-body">
                             <div class="table-responsive-xl">
                            <table class="table table-bordered" style="text-align: center;" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                               <tr class="table-primary">
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Update/Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each LoaiPhong}}
                                    <tr>
                                        <td>
                                            {{this._id}}
                                        </td>
                                        <td>
                                            {{this.name}}
                                        </td>
                                         <td class="text-center">
                                            <button type="button" onclick="GotoEditCate('{{this._id}}')"
                                                class="btn btn-success"><i class="fas fa-edit"></i></button>
                                            <button type="button" onclick="deleteCate('{{this._id}}')"
                                                class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                        </td>

                                    </tr>
                                    {{/each}}

                                </tbody>
                            </table>
                        </div>
                        </div>
                    </div>
                </div>
