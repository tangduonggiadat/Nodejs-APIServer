<div class="container" style="margin-top: 40px;">
    <div class="row">
        <h2 class="col-sm-6">Category Edit</h2>
        <div class="col-sm-6 text-right">
            <button type="button" class="btn btn-dark" onclick="GoBack()"> Go Back</button>
        </div>
    </div>
    <form action="/Dashboard/Category/EditCates/{{this.cate._id}}" class="was-validated" method="POST">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" required onchange="avalidateName()" value="{{this.cate.name}}">
             <p class="valid-feedback text-danger" id="namevalid-feedback"/>
       <div class="invalid-feedback" id="invalid-feedback">Please fill out this field.</div>
        </div>
        
        <button type="submit" id="btn" class="btn btn-primary">Submit</button>
     </form>
     </div>
<script>
     function avalidateName(){
          let value = document.getElementById('name').value
          if(value.length>20){
            document.getElementById('namevalid-feedback').innerText='Phải nhỏ hơn 20 ký tự'
            document.getElementById('btn').disabled= true
            }else{
              document.getElementById('namevalid-feedback').innerText=''
              document.getElementById('btn').disabled= false
            }
      }
    function GoBack() {
        window.location.href = '/Dashboard/Category'
    }
</script>